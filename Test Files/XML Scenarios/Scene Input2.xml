<root>

  <Camera>
    <ViewDirection
      x="0"
      y="0"
      z="1">
    </ViewDirection>

    <UpDirection
      x="0"
      y="1"
      z="0">
    </UpDirection>

    <Location
      x="0"
      y="0"
      z="0">
    </Location>
  </Camera>

  <SpatialNode>
    <Light>
      <Location
        x="5"
        y="5"
        z="0">
      </Location>

      <Intensity
        x="1">
      </Intensity>
      <Color
        x="1"
        y="1"
        z="0">
      </Color>
    </Light>

    <TriangleMesh
      ObjFile="cube.obj"
      VSPath="Vertex Shader.glsl"
      FSPath="Fragment Shader.glsl"
      Texture="Green Wall.jpg">

      <Texture
        TexturePath="Green Wall.jpg">
        <Parameter
        MinFilter="Linear"
        MagFilter="Linear">
        </Parameter>
      </Texture>

      <Uniform
        Name="translation"
        Type="vec3"
        Data0="0.0"
        Data1="0.0"
        Data2="-4.0">
      </Uniform>

      <Uniform
        Name="scale"
        Type="vec3"
        Data0="1.0"
        Data1="1.0"
        Data2="1.0">
      </Uniform>

      <Uniform
        Name="rotation"
        Type="vec3"
        Data0="0.0"
        Data1="0.0"
        Data2="0.0">
      </Uniform>

    </TriangleMesh>

  </SpatialNode>



